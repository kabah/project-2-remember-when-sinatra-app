<!-- Page Content -->
<div class="container">
<!-- Content Panel -->
	
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>Remember When... <%= @memory.title %></h3>
				<p><i class="fa fa-clock-o"></i> Posted on <%= @memory.created_at %></p>
			</div>
			<div class="panel-body">
				<h4> <%= @memory.content %><h4>
				<h4><%= @memory.name %></h4>
				<div class="container">
					<form action="/memories/<%= @memory.id %>/edit" method="get">
						<button class="btn btn-warning">Edit Memory</button>
					</form>
					<form class="" action="/memories/<%= @memory.id %>/delete" method="post">
						<button class="btn btn-danger">Delete Memory</button>
					</form>	
				</div>
			</div>
		</div>
		<div>
			<form action="/memories">
				<button id="back" class="btn">Back</button>
			</form>
		</div>
	</div>
	
	<!-- Comment Section -->
	<div class="col-lg-12">
		<div class="well">
		    <h4>Leave a Comment:</h4>
		    <form role="form">
		        <div class="form-group">
		            <textarea class="form-control" rows="3"></textarea>
		        </div>
		        <button type="submit" class="btn btn-primary">Submit</button>
		    </form>
		</div>
		<hr>
