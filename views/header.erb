	        <div class="carousel-inner">
	            <div class="item active">
	                <a href=<%= "/#{@rand1[0].id}" %> >
		                <div class="fill" style="background-image:url('https://source.unsplash.com/random/1900x1080&text=<%= @rand1[0].name %>');">
