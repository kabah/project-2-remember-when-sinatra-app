<!-- Page Content -->
<div class="container">
<!-- Content Panel -->
	
	<div class="col-lg-12">
		<div>
			<form action="/memories">
				<button id="back" class="btn">Back</button>
			</form>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>Remember When... <%= @memory.title %></h3>
				<p><i class="fa fa-clock-o"></i> Posted on <%= @memory.created_at.strftime('%a %b %d, %Y') %></p>
			</div>
			<div class="panel-body">
				<big><p> <%= @memory.content %><p></big>
				<h4><%= @memory.name %></h4>
				<div class="container">
					<form action="/memories/<%= @memory.id %>/edit" method="get">
						<button class="btn btn-warning">Edit Memory</button>
					</form>
					<form class="" action="/memories/<%= @memory.id %>/delete" method="post">
						<button class="btn btn-danger">Delete Memory</button>
					</form>	
				</div>
			</div>
		</div>
	</div>
	
	<!-- Comment Section -->
	<div class="col-lg-12">
		<div class="well">
		    <h4>Leave a Comment:</h4>
		    <form role="form" action="/memories/<%= @memory.id %>/comments" method="post">
		        <div class="form-group">
			        <input class="form-control" placeholder="Name" name="comment[name]">
		            <textarea class="form-control" name="comment[content]" rows="3"></textarea>
		        </div>
		        <button type="submit" class="btn btn-primary">Post</button>
		    </form>
		</div>
		<hr>
		<!-- Posted Comments -->
		<!-- Comment -->
			<div>
			    <% @memory.comments.each do |comment| %>
				    <div class="panel">
				        <div class="panel-body">
				            <big><p><%= comment.content %></p></big>
				            <h5>-<%= comment.name %></h5>
				            <small><h6 class="media-heading"><%= comment.created_at.strftime('%a %b %d, %Y') %></h6></small>
				        </div>
				    </div>
		        <% end %>
	        <div>
	    </div>
</div>
